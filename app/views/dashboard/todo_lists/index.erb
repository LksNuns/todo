<header>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="pull-left">
          <h1 class="header-title">Lista Todo</h1>
        </div>
        <div class="pull-right">
          <a href="#" class="btn btn-success show-todolist-modal" data-toggle="modal" data-target="#todolist-modal">Criar uma nova lista</a>
        </div>
      </div>
      <%= render partial: "new_modal" %>
    </div>
  </div>
</header>

<% if flash[:notice] %>
  <div class="alert alert-info"><%= flash[:notice] %></div>
<% end %>
<h1> Meus ToDos </h1>

<% @todo_lists.each do |todo_list| %>
  <h4><%= todo_list.title %></h4>
  <ul>
    <% todo_list.tasks.each do |task| %>
      <li><%= task.body %></li>
    <% end %>
  </ul>
<% end %>

  <%= link_to "Nova Lista", new_dashboard_todo_list_path, class: "btn btn-primary" %>
